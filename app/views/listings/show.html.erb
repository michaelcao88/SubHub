<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Listing #<%= @listing.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Start date</dt>
              <dd><%= @listing.start_date %></dd>

              <dt>Description</dt>
              <dd><%= @listing.description %></dd>

              <dt>Rent</dt>
              <dd><%= @listing.rent %></dd>

              <dt>Title</dt>
              <dd><%= @listing.title %></dd>

              <dt>End date</dt>
              <dd><%= @listing.end_date %></dd>

              <dt>Address</dt>
              <dd><%= @listing.address %></dd>

              <dt>User</dt>
              <dd><%= @listing.user_id %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/listings" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/listings/<%= @listing.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_listing/<%= @listing.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
