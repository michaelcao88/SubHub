<!-- Validation failure messages -->

<% if @listing.errors.any? %>
  <% @listing.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Listing</h3>
      </div>
      <div class="panel-body">
        <form action="/create_listing" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for title -->
          <div class="form-group">
            <label for="title" class="col-sm-2 control-label">
              Title
            </label>
            <div class="col-sm-10">
              <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @listing.title %>">
            </div>
          </div>

          <!-- Label and input for description -->
          <div class="form-group">
            <label for="description" class="col-sm-2 control-label">
              Description
            </label>
            <div class="col-sm-10">
              <textarea id="description" name="description" placeholder="Description" class="form-control" rows="3"><%= @listing.description %></textarea>
            </div>
          </div>

          <!-- Label and input for rent -->
          <div class="form-group">
            <label for="rent" class="col-sm-2 control-label">
              Rent
            </label>
            <div class="col-sm-10">
              <input type="text" id="rent" name="rent" placeholder="Rent" class="form-control" value="<%= @listing.rent %>">
            </div>
          </div>

          <!-- Label and input for address -->
          <div class="form-group">
            <label for="address" class="col-sm-2 control-label">
              Address
            </label>
            <div class="col-sm-10">
              <input type="text" id="address" name="address" placeholder="Address" class="form-control" value="<%= @listing.address %>">
            </div>
          </div>

          <!-- Label and input for start_date -->
          <div class="form-group">
            <label for="start_date" class="col-sm-2 control-label">
              Start date
            </label>
            <div class="col-sm-10">
              <input type="text" id="start_date" name="start_date" placeholder="Start date" class="form-control" value="<%= @listing.start_date %>">
            </div>
          </div>

          <!-- Label and input for end_date -->
          <div class="form-group">
            <label for="end_date" class="col-sm-2 control-label">
              End date
            </label>
            <div class="col-sm-10">
              <input type="text" id="end_date" name="end_date" placeholder="End date" class="form-control" value="<%= @listing.end_date %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Listing
              </button>
              or
              <a href="/listings">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
