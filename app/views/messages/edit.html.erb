<!-- Validation failure messages -->

<% if @message.errors.any? %>
  <% @message.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Message #<%= @message.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_message/<%= @message.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for sender_id -->
          <div class="form-group">
            <label for="sender_id" class="col-sm-2 control-label">
              Sender
            </label>
            <div class="col-sm-10">
              <%= current_user.first_name.capitalize %> <%= current_user.last_name.capitalize %>
            </div>
          </div>

          <!-- Label and input for receiver_id -->
          <div class="form-group">
            <label for="receiver_id" class="col-sm-2 control-label">
              Receiver
            </label>
            <div class="col-sm-10">
              <%= @message.receiver.first_name.capitalize %> <%= @message.receiver.last_name.capitalize %>
            </div>
          </div>

          <!-- Label and input for message -->
          <div class="form-group">
            <label for="message" class="col-sm-2 control-label">
              Message
            </label>
            <div class="col-sm-10">
              <textarea id="message" name="message" placeholder="Message" class="form-control" rows="3"><%= @message.message %></textarea>
            </div>
          </div>

          <!-- Label and input for listing_id -->
          <div class="form-group">
            <label for="listing_id" class="col-sm-2 control-label">
              Listing
            </label>
            <div class="col-sm-10">
            <%= @message.listing.title %>
              <input type="hidden" id="listing_id" name="listing_id" placeholder="Listing" class="form-control" value="<%= @message.listing_id %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Message
              </button>
              or
              <a href="/messages/<%= @message.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
